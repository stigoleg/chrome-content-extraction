{
  "name": "context-capture-saver",
  "version": "1.3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "npm run check",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc -p tsconfig.strict.json --noEmit",
    "test": "node --test tests/*.test.js",
    "test:ci": "node --test tests/*.test.js",
    "check": "node scripts/check-runtime.mjs",
    "build": "node scripts/build.mjs --target=all",
    "build:chrome": "node scripts/build.mjs --target=chrome",
    "build:firefox": "node scripts/build.mjs --target=firefox",
    "validate:build": "node scripts/validate-build.mjs --target=all",
    "validate:build:chrome": "node scripts/validate-build.mjs --target=chrome",
    "validate:build:firefox": "node scripts/validate-build.mjs --target=firefox",
    "audit:prod": "npm audit --omit=dev --audit-level=high",
    "verify": "npm run check && npm run typecheck && npm run typecheck:strict && npm run test:ci && npm run build && npm run validate:build"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "pako": "^2.1.0",
    "pdfjs-dist": "^5.4.624",
    "sql.js": "^1.14.0"
  }
}
